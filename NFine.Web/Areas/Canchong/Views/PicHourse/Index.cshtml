            //绑定标签点击事件
            $(".biaoqian a").bind("click", function () {
                var id = $(this).data("id");
                $("#selCategory").val(id).trigger("change");
                areaObj.change();
            });

            //绑定归类点击事件
            $("#btnOK").bind("click", function () {
                var dash = $("#currentFolder").text();//获取当前盘符
                var category = $("#selCategory").val();//图片分类
                var cvalue = $("#selCategory").find("option:selected").text();//分类值
                var count = $("#imglst :checkbox:checked").length;
                var synchro = "";
                if ($("#chksynchro").is(':checked')) {
                    synchro = 'True';
                }

                if ($.trim(category) == "") {
                    $.modalMsg('请选择图片类别', 'warning');
                    return;
                }
                if ($("#imglst :checkbox:checked").length <= 0) {
                    $.modalMsg('请选择图片', 'warning');
                    return;
                }
                //获取选中集合转成json
                var selectedData = [];
                $("#imglst :checkbox:checked").each(function () {
                    var $this = $(this).parents(".caption").children("h3");
                    var nick = $this.attr("title");//文件昵称
                    var type = $this.data("type");//文件类型
                    var size = $this.data("size");//文件大小
                    var fullname = $this.data("fullname");
                    selectedData.push({ filename: fullname, filetype: type, filesize: size, filenick: nick });//加入数组
                });
                var dat = JSON.stringify(selectedData);

                $.ajax({
                    url: "/Canchong/PicHourse/FnFile",
                    data: { dash: dash, category: category, dat: dat, cvalue: cvalue, synchro: synchro },
                    dataType: "json",
                    async: false,
                    success: function (data) {
                        $.modalMsg('归档成功', 'success');
                        //重新加载该盘符图片
                        currpage = 1;//初始化分页
                        getImgLst(true);//加载该盘符下所有图片
                    }
                });

            });

            //加载更多
            $("#btnMore").bind("click", function () {
                currpage = currpage + 1;
                getImgLst(false);//加载更多图片
            });

            //绑定盘符点击事件
            $(".dashboard-stats").bind("click", function () {
                var $this = $(this);
                var current = $this.find(".m-top-none").text();

                $("#currentFolder").text(current).data("id", $this.attr("id"));
                currpage = 1;//初始化分页
                getImgLst(true);//加载该盘符下所有图片
            });

            //二次加载的js
            loadAgain();

            //初始化iCheck
            $('#chkall,#chksynchro').iCheck({
                handle: 'checkbox',
                checkboxClass: 'icheckbox_minimal-green',
                radioClass: 'iradio_minimal-green'
            });
            $('#chkall').on('ifChanged', function (event) {
                var flag = 'uncheck';
                if ($(this).is(':checked')) {//就是这么简单
                    flag = 'check';
                }
                $('#imglst input[type="checkbox"]').iCheck(flag);
            });

        });

