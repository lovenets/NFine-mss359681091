        var arrcolor2 = ["info", "primary", "success", "danger", "warning"];

        $(function () {

            //类别绑定
            $("#selCategory").bindSelect({
                url: "/SystemManage/ItemsData/GetSelectJson",
                param: { enCode: "Category" }
            });

            //初始化select2控件
