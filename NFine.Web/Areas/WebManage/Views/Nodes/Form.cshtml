@{
    ViewBag.Title = "栏目编辑";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/WebManage/Nodes/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }

        $("#F_ParentId").change(function () {
            fnChange();//生成栏目编号
        });
    });

    function fnChange() {

    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/WebManage/Nodes/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
            @*<li ><a href="#">扩展信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">父栏目</th>
                    <td class="formValue">
                        @*<input id="F_ParentId" name="F_ParentId" type="text" class="form-control required" placeholder="请输入父栏目" />*@

                        @Html.DropDownList("F_ParentId", null, new { @class = "form-control" })
                    </td>
                    <th class="formTitle">栏目编码</th>
                    <td class="formValue">
                        <input id="F_EnCode" name="F_EnCode" type="text" class="form-control " placeholder="请输入栏目编码" disabled />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">栏目名称</th>
                    <td class="formValue">
                        <input id="F_FullName" name="F_FullName" type="text" class="form-control required" placeholder="请输入栏目名称" />
                    </td>
                    <th class="formTitle">栏目路径</th>
                    <td class="formValue">
                        <input id="F_NodePath" name="F_NodePath" type="text" class="form-control " placeholder="请输入栏目路径" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">栏目图片</th>
                    <td class="formValue">
                        <input id="F_ImageUrl" name="F_ImageUrl" type="text" class="form-control " placeholder="请输入栏目图片" />
                    </td>
                    <th class="formTitle">排序号</th>
                    <td class="formValue">
                        <input id="F_SortCode" name="F_SortCode" type="text" class="form-control required" placeholder="请输入排序号" />
                    </td>
                </tr>

                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        描述
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
